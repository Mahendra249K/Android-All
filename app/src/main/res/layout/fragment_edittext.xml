<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" android:clickable="true" android:background="#ffffff" xmlns:aapt="http://schemas.android.com/aapt" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/scroll_view">


    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent">

    <TextView android:layout_height="30dp" android:layout_width="wrap_content" android:id="@+id/simple_textView" android:text="Simple EditText : " android:layout_marginTop="20dp" android:textColor="#000000" android:textSize="20dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/simple_edit_text" android:inputType="textPersonName" android:layout_below="@+id/simple_textView" android:hint="Simple editText"/>

    <TextView android:layout_height="30dp" android:layout_width="wrap_content" android:id="@+id/password_textView" android:text="Password EditText :" android:layout_marginTop="30dp" android:textColor="#000000" android:textSize="20dp" android:layout_below="@+id/simple_edit_text"/>

    <EditText android:layout_height="40dp" android:layout_width="match_parent" android:background="@drawable/background_2" android:id="@+id/password_edit_text" android:inputType="textPassword" android:layout_below="@+id/password_textView" android:hint="Password editText"/>

    <TextView android:layout_height="30dp" android:layout_width="wrap_content" android:id="@+id/numeric_password_textView" android:text="Password Numeric EditText :" android:layout_marginTop="30dp" android:textColor="#000000" android:textSize="20dp" android:layout_below="@+id/password_edit_text"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/numeric_password_edit_text" android:inputType="numberPassword" android:layout_below="@+id/numeric_password_textView" android:hint="Password Numeric editext" android:layout_alignParentStart="true" android:layout_alignParentLeft="true"/>

    <TextView android:layout_height="30dp" android:layout_width="wrap_content" android:id="@+id/email_textView" android:text="E-mail EditText :" android:layout_marginTop="30dp" android:textColor="#000000" android:textSize="20dp" android:layout_below="@+id/numeric_password_edit_text"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/email_edit_text" android:inputType="textEmailAddress" android:layout_below="@+id/email_textView" android:hint="abc@gmail.com"/>

    <TextView android:layout_height="30dp" android:layout_width="wrap_content" android:id="@+id/phono_textView" android:text="Phone no EditText :" android:layout_marginTop="30dp" android:textColor="#000000" android:textSize="20dp" android:layout_below="@+id/email_edit_text"/>

    <EditText android:layout_height="40dp" android:layout_width="match_parent" android:background="@drawable/background_3" android:id="@+id/phoneno_edit_text" android:inputType="phone" android:layout_below="@+id/phono_textView" android:hint=" +91 00000000000" android:layout_marginRight="40dp" android:layout_marginLeft="10dp"/>

    <TextView android:layout_height="30dp" android:layout_width="wrap_content" android:id="@+id/auto_complate_text_view" android:text="Auto Complate EditText :" android:layout_marginTop="30dp" android:textColor="#000000" android:textSize="20dp" android:layout_below="@+id/phoneno_edit_text"/>

    <AutoCompleteTextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/auto_Complete_edit_text" android:layout_below="@+id/auto_complate_text_view" android:hint="Auto Complete editText" android:completionThreshold="1"/>

    <TextView android:layout_height="30dp" android:layout_width="wrap_content" android:id="@+id/multi_auto_complate_text_view" android:text="Multi Auto Complate EditText :" android:layout_marginTop="30dp" android:textColor="#000000" android:textSize="20dp" android:layout_below="@+id/auto_Complete_edit_text"/>

    <MultiAutoCompleteTextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/multi_auto_complete_edit_text" android:layout_below="@+id/multi_auto_complate_text_view" android:hint="Multi Auto Complete editText"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/change_text" android:text="Change Text" android:layout_marginTop="50dp" android:layout_below="@+id/multi_auto_complete_edit_text" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:layout_alignParentEnd="true" android:layout_alignParentRight="true" android:layout_marginBottom="50dp" android:gravity="center"/>

</RelativeLayout>

</ScrollView>

</RelativeLayout>